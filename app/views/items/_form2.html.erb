<script type="text/javascript">
  $(function () {
    // i18n numbers
    $(".delimit-number").each(function() {
      $(this).val(sr.fn.math.toDelimited($(this).val()));
    })
    
    // no form submission on enter key
    $('input').keypress(function(e) {
      if (e.which == 13) {
        e.preventDefault();
      }
    });
  });
</script>

