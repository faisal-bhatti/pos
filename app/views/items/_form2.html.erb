              $(this).parent().remove();
          });
          elem.append(del);
          $("#parts_target").append(elem);
          
          sr.fn.onscreen_keyboard.make($('#' + inp_id).removeClass('keyboardable-done'));
          sr.fn.onscreen_keyboard.make($('#' + qinp_id).removeClass('keyboardable-done'));
        }
