<div class="right">
  <%#= form_for(@list_item do |f| %>
  <%= form_for @list_item,:url=>purchase_item_list_items_path(@purchase_item),:method=>:post do |f| %>
    <table width="90%" align="center">
      <tr>
        <td> <%= f.label I18n.t("activerecord.attributes.name") %> </td>
        <td> <%= f.text_field :name, :style => "width: 50%;" %> </td>
      </tr>
      <tr>
        <td> <%= f.label "Quantity" %> </td>
        <td> <%= f.text_field :quantity, :style => "width: 50%;" %> </td>
      </tr>

      <tr>
        <td colspan="2" align="center"> 
          <div class="actions">
            <%= f.submit t('helpers.submit.save')%>
          </div>
        </td>
      </tr>
    </table>
  <% end %>
</div>