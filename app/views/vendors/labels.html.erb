<html>
<head>
<style>
body {
  font-family: sans;
}
div.label {
  display: inline-block;
  width: 80mm;
  height: 40mm;
  padding: 3mm;
  border: 1pt solid black;
  page-break-inside: avoid;
}
span.price {
font-size: 15mm;
font-weight: bold;
float:right;
}
img.barcode {
height: 50%;
float: left;
}
div.name {
font-size: 4mm;
font-weight: bold;
clear: both;
padding-top: 4mm;
}


</style>
</head>
<body>

<% j = 0 %>

<% Item.all.each do |i| %>
<% j += 1 %>
<div class='label'>
<span class="price"><%= number_to_currency i.base_price %></span>
<div class='name'><%= i.name %></div>
<div class='sku'><%= i.sku %></div>
</div>

<% end %>
</body>
</html>
