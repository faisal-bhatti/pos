%h2=I18n.t("headings.best_sellers")
%table.striped-table2
  %tr
    %th{ :style => 'width: 30%' }= t("activerecord.attributes.name")
    %th{ :style => 'width: 10%' }= t("activerecord.attributes.sku")
    %th{ :style => 'width: 5%' }= t("activerecord.attributes.quantity_sold")
  - i = 0
  - @reports[:items].reverse.each do |item|
    - break if i > @limit
    - i += 1
    %tr
      %td= item[0]
      %td= item[1][:sku]
      %td{ :align=>"center"}= item[1][:quantity_sold]